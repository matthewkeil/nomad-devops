{
  "include": [
    "package.json",
    "index.ts",
    "webpack.config.ts",
    "test.ts",
    "config/**/*",
    "templates/**/*",
    "bin/**/*",
    "lib/**/*",
    "src/**/*"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["ESNext", "ESNext.AsyncIterable", "ES2020"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  }
}
